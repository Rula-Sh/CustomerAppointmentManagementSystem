@model AppointmentViewModel

@{
    ViewData["Title"] = "Appointment";
}

<div class="card-body d-flex flex-column justify-content-between">
    <h5 class="card-title">@Model.Name Service</h5>
    <span><strong>Customer: </strong>@Model.Customer.FullName</span>
    <span><strong>Employee: </strong>@Model.Employee.FullName</span>
    <span><strong>Date: </strong>@Model.Date</span>
    <span><strong>Status: </strong>@Model.Status</span>
    <span><strong>Notes: </strong>@Model.Notes</span>

    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i>
            Go Back
        </a>
    </div>
</div>